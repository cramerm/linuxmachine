<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sample.sample.HowToActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="How To Use ProRead!"
        android:id="@+id/howToTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="40dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="         Hey! Thanks for choosing ProRead, the smart and enchanting app that will improve not only how fast you read, but how well you memorize it. ProRead uses study shown reading skills enhancing strategies to change the way you read sentences that actually improve reading results. Instead of how you read anything, like this paragraph, from a left to right fashion, you  instead read the sentence by word. This reading strategy is a skill that require practice to improve. ProRead allows you to change settings to your Reader that better fit you and your reading mood. If you like to know what is in store, continue, otherwise get started!  "
        android:id="@+id/howToIntro"
        android:textSize="18dp"
        android:textIsSelectable="true"
        android:layout_below="@+id/howToTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Home"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue How To"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/howToIntro"
        android:layout_alignEnd="@+id/howToIntro" />
</RelativeLayout>
